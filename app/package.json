{
  "name": "GameCollie",
  "version": "1.0.0",
  "description": "GameCollie keeps track of all your game collection needs.",
  "license": "MIT",
  "scripts": {
    "start": "meteor --settings settings-development.json",
    "start-develop-branch": "git checkout develop && git pull && meteor npm install && meteor --production --port 127.0.0.1:3000 --settings settings-develop-branch.json",
    "start-master-branch": "git checkout master  && git pull && meteor npm install && meteor --production --port 127.0.0.1:4000 --settings settings-master-branch.json",
    "test": "meteor test --driver-package practicalmeteor:mocha --port 5000",
    "chimp-watch": "chimp --ddp=http://localhost:3000 --watch --mocha --path=tests",
    "chimp-test": "chimp --ddp=http://localhost:3000 --mocha --path=tests",
    "#build-installer-dev": "npm run desktop -- build-installer -b http://gamecolliedev.addbrainz.org:80",
    "desktop": "meteor-desktop"
  },
  "devDependencies": {
    "chimp": "^0.41.2",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-meteor": "^4.0.1",
    "eslint-plugin-react": "^6.4.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "meteor",
      "react"
    ],
    "extends": [
      "airbnb/base",
      "plugin:meteor/guide",
      "plugin:react/recommended"
    ],
    "env": {
      "browser": true
    },
    "globals": {
      "server": false,
      "browser": false,
      "expect": false
    },
    "rules": {
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0,
      "import/extensions": 0,
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id",
            "_ensureIndex",
            "_verifyEmailToken",
            "_resetPasswordToken",
            "_name"
          ]
        }
      ],
      "class-methods-use-this": 0
    }
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "bcrypt": "^1.0.2",
    "bluebird": "^3.5.0",
    "bootstrap": "^3.3.7",
    "buffer-crc32": "^0.2.13",
    "elementtree": "^0.1.7",
    "hash_file": "^0.1.1",
    "jquery": "^2.2.4",
    "jquery-validation": "^1.15.1",
    "meteor-desktop": "^0.7.0",
    "meteor-node-stubs": "^0.2.6",
    "mkdirp": "^0.5.1",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-addons-pure-render-mixin": "^15.5.2",
    "react-bootstrap": "^0.30.9",
    "react-dom": "^15.5.4",
    "react-komposer": "^2.0.0",
    "react-router": "^3.0.0",
    "react-router-bootstrap": "^0.23.2",
    "simpl-schema": "^0.2.3",
    "sprintf-js": "^1.0.3",
    "xml-js": "^1.2.2",
    "xml2js": "^0.4.17",
    "xmldoc": "^1.1.0",
    "xmldom": "^0.1.27",
    "xpath": "0.0.24"
  }
}
{
	"gameCollection": {
		"src": "/Volumes/GAMES/roms",
		"#src": "testgames/src",
		"#dst": "/Volumes/RETROPIE/roms",
		"dst": "testgames/dst"
	},

	"limit": {
		"maxDstPercentage": 0,
		"maxGames": 500
	},

	"platformWeight": {
		"psx": 20,
		"psp": 10,
		"n64": 8,
		"snes": 5,
		"nes": 5,
		"nds": 3,
		"default": 1
	},

	"ratingAdjustments": [
		{"field": "name"     , "contains": "mario"     , "adjustment":  1.0},
		{"field": "name"     , "contains": "zelda"     , "adjustment":  1.0},
		{"field": "name"     , "contains": "crash"     , "adjustment":  0.9},
		{"field": "name"     , "contains": "rayman"    , "adjustment":  0.8},
		{"field": "name"     , "contains": "frogger"   , "adjustment":  0.7},
		{"field": "name"     , "contains": "metal gear", "adjustment":  0.6},

		{"field": "name"     , "contains": "sonic"     , "adjustment": -1.0},
		{"field": "name"     , "contains": "tekken"    , "adjustment": -1.0},

		{"field": "platform" , "contains": "platform"  , "adjustment":  0.3},
		{"field": "platform" , "contains": "strategy"  , "adjustment":  0.2},
		{"field": "platform" , "contains": "puzzle"    , "adjustment":  0.1},
		{"field": "platform" , "contains": "sports"    , "adjustment": -0.1},
		{"field": "platform" , "contains": "racing"    , "adjustment": -0.2},
		{"field": "platform" , "contains": "action"    , "adjustment": -0.2},
		{"field": "platform" , "contains": "fighting"  , "adjustment": -0.3},
		{"field": "platform" , "contains": "shooter"   , "adjustment": -0.3},

		{"field": "developer", "contains": "nintendo"  , "adjustment":  0.1},

		{"field": "players"  , "contains": "2"         , "adjustment":  0.2},
		{"field": "players"  , "contains": "3"         , "adjustment":  0.2},
		{"field": "players"  , "contains": "4"         , "adjustment":  0.2}
	],

	"platformAliases": {
		"psx": ["sony - psx", "sony playstation", "sony - playstation"],
		"psp": ["sony - psp", "sony playstation portable"],
		"n64": ["nintendo 64", "nintendo - nintendo 64"],
		"nds": ["nintendo - nds"],
		"3ds": ["nintendo - 3ds"],
		"gb": ["nintendo - game boy"],
		"gba": ["nintendo - gba"],
		"nes": ["nintendo - nintendo entertainment system"],
		"snes": ["nintendo - super nintendo", "nintendo - super nintendo entertainment system"],
		"c64": ["commodore 64", "commodore - commodore 64"],
		"atari2600": ["atari - atari 2600"]
	}
}
